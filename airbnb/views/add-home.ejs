  <%- include ('Partials/nav') %>
  <main>
  <div class="max-w-md mx-auto mt-10 bg-white rounded-lg shadow-md p-8">
   <h1 class="text-center text-2xl font-bold mb-6 text-gray-800">Add a New Home</h1>
   <form action="/host/add-home" method="POST" class="flex flex-col gap-4">
    <input type="text" name="name" placeholder="Enter home name" required class="px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-red-400 text-base">
